<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coin"
        android:textSize="16dp"
        android:gravity="left"
        android:text="----------------------------------------------------"
        android:singleLine="false"
        android:layout_below="@+id/z"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x"
        android:textSize="16dp"
        android:gravity="left"
        android:text="-----------"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/t"
        android:layout_alignStart="@+id/t" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t"
        android:textSize="16dp"
        android:gravity="left"
        android:text="-----------"
        android:layout_below="@+id/x"
        android:layout_alignStart="@+id/w"
        android:singleLine="true"
        android:layout_alignEnd="@+id/w" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/w"
        android:textSize="16dp"
        android:gravity="left"
        android:text="-----------"
        android:layout_below="@+id/t"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:layout_alignStart="@+id/z" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z"
        android:textSize="16dp"
        android:gravity="left"
        android:text="-----------"
        android:layout_below="@+id/w"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:layout_alignStart="@+id/coin" />


</RelativeLayout>
